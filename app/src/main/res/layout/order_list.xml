<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_base"
        android:padding="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_button"
            android:scrollbars="none">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/to_parking"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/my_stop_park"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/easy_to_stop05"
                />
        </LinearLayout>

        <!--        判断是否可以预约-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_button">
            <TextView
                android:id="@+id/wait_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="3"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_red"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_weight="3"/>
            <TextView
                android:id="@+id/my_stop_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:textSize="16sp"
                android:text="@string/read_detail"
                android:layout_weight="3"
                android:clickable="true"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDB3B3"
            />

    </LinearLayout>
</LinearLayout>