<?xml version="1.0" encoding="utf-8"?>
<!--用来存放图片和名称-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_base"
        android:padding="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_button"
            android:scrollbars="none">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/to_parking"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/console_carParkName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:textSize="18sp"
                android:textColor="@color/black02"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="30dp"
                android:drawableLeft="@drawable/easy_to_stop05"
                />
            <!--            <TextView-->
            <!--                android:id="@+id/console_city"-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:layout_margin="5dp"-->
            <!--                android:textSize="20sp"-->
            <!--                android:layout_weight="1"-->
            <!--                android:layout_gravity="center"-->
            <!--                android:gravity="center"-->
            <!--                />-->
        </LinearLayout>

        <!--        地址-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_button"
            >
            <TextView
                android:id="@+id/console_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:layout_weight="1"
                android:padding="5dp"
                android:gravity="center_vertical"
                />

        </LinearLayout>
        <!--        判断是否可以预约-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="@drawable/bg_button">
            <TextView
                android:id="@+id/console_is_book"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:text="车位："
                android:textSize="16sp"

                android:layout_weight="3"/>
            <TextView
                android:id="@+id/stall_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/color_book_info_green"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="3"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_book_info_green"
                android:gravity="center"
                android:textSize="16sp"
                android:layout_weight="3"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#BDB3B3"
            />
    </LinearLayout>
</LinearLayout>
