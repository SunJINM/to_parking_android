<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MyRechargeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_index_one"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/recharge"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="24sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/color_index_two"
        android:layout_margin="8dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_margin="20dp"
            android:text="@string/recharge_money"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/to_my_balance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="@color/black"
                android:hint="@string/to_recharge_money"
                android:drawableLeft="@drawable/my_balance"
                android:textStyle="italic"/>
            <Button
                android:id="@+id/to_recharge"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="5dp"
                android:text="@string/my_recharge"
                android:textSize="24sp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>